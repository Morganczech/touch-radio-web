---
import StationItem from "./StationItem.astro";
const { stations } = Astro.props;
---

<ul class="station-grid">
    {stations.map((station) => <StationItem station={station} />)}
</ul>

<style>
    .station-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem; /* Increased spacing as requested */
        list-style: none;
        padding: 0;
    }
</style>
