<aside class="selection-panel">
    <div class="selection-header">
        <h3>My Selection (<span id="selection-count">0</span>)</h3>
        <button
            id="clear-all-btn"
            class="clear-all-btn"
            disabled
            title="Remove all stations from selection">Clear All</button
        >
    </div>
    <div id="selection-list" class="selection-list">
        <p class="empty-state">No stations selected</p>
    </div>
    <div class="export-actions">
        <button
            id="share-playlist-btn"
            disabled
            class="sidebar-btn share-btn"
            title="Share this playlist with others">ðŸ”— Share Playlist</button
        >
        <button
            id="export-btn"
            disabled
            class="sidebar-btn"
            title="Export selected stations in Touch Radio JSON format"
            >Export JSON</button
        >
        <button
            id="export-m3u-btn"
            disabled
            class="sidebar-btn"
            title="Export playlist in M3U format">Export M3U</button
        >
        <button
            id="export-m3u8-btn"
            disabled
            class="sidebar-btn"
            title="Export playlist in UTF-8 encoded M3U8 format"
            >Export M3U8 (UTF-8)</button
        >
        <button
            id="export-pls-btn"
            disabled
            class="sidebar-btn"
            title="Export playlist in PLS format">Export PLS</button
        >
    </div>
</aside>

<style>
    .selection-panel {
        width: 320px;
        flex-shrink: 0;
        background: var(--bg);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 1rem;
        position: sticky;
        top: 1rem;
        height: fit-content;
        max-height: calc(100vh - 2rem);
        display: flex;
        flex-direction: column;
    }

    .selection-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.5rem;
    }

    .selection-header h3 {
        margin: 0;
        flex: 1;
    }

    .clear-all-btn {
        background: none;
        border: none;
        color: var(--muted);
        font-size: 0.8rem;
        padding: 0.25rem 0.5rem;
        cursor: pointer;
        transition: color 0.2s;
        white-space: nowrap;
    }

    .clear-all-btn:hover:not(:disabled) {
        color: #e74c3c;
    }

    .clear-all-btn:disabled {
        opacity: 0.3;
        cursor: not-allowed;
    }

    .selection-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 1rem;
        overflow-y: auto;
        flex: 1;
        min-height: 100px;
        padding-right: 4px; /* Space for scrollbar */
    }

    .export-actions {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border);
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .sidebar-btn {
        width: 100%;
        text-align: center;
    }

    .empty-state {
        color: var(--muted);
        font-style: italic;
        text-align: center;
        padding: 1rem 0;
    }

    @media (max-width: 1024px) {
        .selection-panel {
            width: 100%;
            position: static;
            max-height: 500px;
        }
    }

    /* Helper styles for dynamically created elements inside selection list */
    :global(.selected-item) {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.5rem;
        background: rgba(0, 0, 0, 0.02);
        border-radius: 6px;
        border: 1px solid var(--border);
    }

    :global([data-theme="dark"] .selected-item) {
        background: rgba(255, 255, 255, 0.05);
    }

    :global(.selected-item-info) {
        display: flex;
        flex-direction: column;
        gap: 0.1rem;
        overflow: hidden;
    }

    :global(.selected-item-name) {
        font-weight: 600;
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    :global(.selected-item-meta) {
        font-size: 0.75rem;
        color: var(--muted);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    :global(.sidebar-play-btn) {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
        margin: 0;
        line-height: 0;
        color: var(--muted);
        opacity: 0.7;
        transition:
            opacity 0.2s,
            transform 0.2s,
            color 0.2s;
    }

    :global(.sidebar-play-btn:hover) {
        opacity: 1;
        transform: scale(1.1);
        color: var(--accent);
    }

    :global(.remove-btn) {
        background: none;
        border: none;
        cursor: pointer;
        color: #e74c3c;
        padding: 0.25rem;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s;
    }

    :global(.remove-btn:hover) {
        transform: scale(1.1);
    }

    :global(.share-btn) {
        background: var(--accent);
        color: var(--bg);
        font-weight: 600;
        transition:
            transform 0.2s,
            opacity 0.2s;
    }

    :global(.share-btn:hover:not(:disabled)) {
        transform: translateY(-1px);
        opacity: 0.9;
    }

    :global(.share-btn:disabled) {
        background: var(--border);
        color: var(--muted);
    }
</style>
