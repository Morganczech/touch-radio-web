---
import StationItem from "./StationItem.astro";
interface Station {
    id: string;
    name: string;
    country: string;
    codec: string;
    bitrate: number;
    tags: string[];
    favicon: string;
    streamUrl: string;
}

interface Props {
    stations: Station[];
}

const { stations } = Astro.props;
---

<ul class="station-grid">
    {stations.map((station) => <StationItem station={station} />)}
</ul>

<style>
    .station-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
        list-style: none;
        padding: 0;
    }
</style>
